set(CRYPTO_BACKEND_LIST OpenSSL wolfSSL Libgcrypt mbedTLS)

if("@CRYPTO_BACKEND@" IN_LIST CRYPTO_BACKEND_LIST)
    find_package(@CRYPTO_BACKEND@)
endif()

if(@ZLIB_FOUND@)
    find_package(ZLIB)
endif()

include("${CMAKE_CURRENT_LIST_DIR}/@PROJECT_NAME@-targets.cmake")

# Alias for either shared or static library
if(NOT TARGET @PROJECT_NAME@::@LIB_NAME@)
  add_library(@PROJECT_NAME@::@LIB_NAME@ ALIAS @PROJECT_NAME@::@LIB_SELECTED@)
endif()

# Compatibility alias
if(NOT TARGET Libssh2::@LIB_NAME@)
  add_library(Libssh2::@LIB_NAME@ ALIAS @PROJECT_NAME@::@LIB_SELECTED@)
endif()
