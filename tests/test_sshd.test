#!/usr/bin/env bash

# https://testanything.org/tap-specification.html

d="$(dirname "$0")"

# Load list of SSHD tests from Makefile.am
tests=''
load=0
while read -r l; do
  if [[ "${l}" = 'SSHD_TESTS ='* ]]; then
    load=1
  elif [ "${load}" = '1' ]; then
    tests="${tests} ${l/\\}"
    [[ ! "${l}" = *"\\" ]] && break
  fi
done < "${d}/Makefile.am"

tests="${tests} test_auth_pubkey_ok_rsa test_auth_pubkey_ok_ed25519"

count=1
total="$(echo "${tests}" | wc -w | tr -d ' ')"

echo "${count}..${total}"

for test in ${tests}; do
  if "${d}/sshd_fixture.sh" "./${test}${EXEEXT}"; then
    res='ok'
  else
    res='not ok'
  fi
  echo "${res} ${count} - sshd-${test}"
  ((count++))
done
